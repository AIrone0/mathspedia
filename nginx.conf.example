# Nginx configuration for Mathspedia
# Place this in /etc/nginx/sites-available/mathspedia
# and create symlink: ln -s /etc/nginx/sites-available/mathspedia /etc/nginx/sites-enabled/

server {
    listen 80;
    server_name mathspedia.org www.mathspedia.org;
    
    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name mathspedia.org www.mathspedia.org;
    
    root /var/www/mathspedia/mediawiki;
    index index.php;
    
    # SSL configuration
    ssl_certificate /etc/letsencrypt/live/mathspedia.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/mathspedia.org/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    
    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    
    # MediaWiki configuration
    location / {
        try_files $uri $uri/ @rewrite;
    }
    
    location @rewrite {
        rewrite ^/(.*)$ /index.php?title=$1&$args;
    }
    
    location ~ \.php$ {
        include fastcgi_params;
        fastcgi_pass unix:/var/run/php/php8.1-fpm.sock;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param PHP_VALUE "upload_max_filesize=100M \n post_max_size=100M";
    }
    
    # Deny access to sensitive files
    location ~ ^/(cache|includes|languages|maintenance|mw-config|resources|serialized|tests|vendor)/ {
        deny all;
    }
    
    location ~ ^/(\.git|\.svn|LocalSettings\.php|composer\.(json|lock)) {
        deny all;
    }
    
    # Static files caching
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
    
    # Logging
    access_log /var/log/nginx/mathspedia-access.log;
    error_log /var/log/nginx/mathspedia-error.log;
}

